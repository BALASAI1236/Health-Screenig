@model IEnumerable<HealthScreening.Models.Patient>

@{
    ViewBag.Title = "viewpatients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br /><br /> 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iscovidaffected)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.symptoms)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.postcovidissues)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.userid)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <th>
        @Html.DisplayFor(modelItem => item.iscovidaffected)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.symptoms)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.postcovidissues)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.gender)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.age)
    </td>
    <td>
        
        @Html.ActionLink("Reject", "rejectrequest", new { patientid = item.userid })
    </td>
</tr>
}

</table>
